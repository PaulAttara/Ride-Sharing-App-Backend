<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedRouteListingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtselectedstartaddess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Start Address"/>

        <TextView
            android:id="@+id/txtselectedendaddess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="End Address"/>

        <Button
            android:id="@+id/btnbackresults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_backlistings" />
    </LinearLayout>

</FrameLayout>